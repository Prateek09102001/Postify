<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Create Account</title>
</head>
<body class="bg-zinc-900 text-white min-h-screen flex items-center justify-center">
    <div class="w-full max-w-2xl bg-zinc-800 rounded-lg p-10 shadow-lg">
        <h3 class="text-3xl font-semibold text-center mb-8">Create Account</h3>
        <form action="/register" method="post" class="space-y-6">
            <!-- Name Input -->
            <div>
                <label for="name" class="block text-sm font-medium text-zinc-400 mb-2">Full Name</label>
                <input 
                    id="name" 
                    class="w-full px-4 py-2 rounded-md bg-transparent border-2 border-zinc-600 text-white focus:ring-2 focus:ring-blue-500 focus:outline-none" 
                    type="text" 
                    placeholder="Enter your name" 
                    name="name" 
                    required>
            </div>

            <!-- Username Input -->
            <div>
                <label for="username" class="block text-sm font-medium text-zinc-400 mb-2">Username</label>
                <input 
                    id="username" 
                    class="w-full px-4 py-2 rounded-md bg-transparent border-2 border-zinc-600 text-white focus:ring-2 focus:ring-blue-500 focus:outline-none" 
                    type="text" 
                    placeholder="Choose a username" 
                    name="username" 
                    required>
            </div>

            <!-- Password Input -->
            <div>
                <label for="password" class="block text-sm font-medium text-zinc-400 mb-2">Password</label>
                <input 
                    id="password" 
                    class="w-full px-4 py-2 rounded-md bg-transparent border-2 border-zinc-600 text-white focus:ring-2 focus:ring-blue-500 focus:outline-none" 
                    type="password" 
                    placeholder="Enter your password" 
                    name="password" 
                    required>
            </div>

            <!-- Email Input -->
            <div>
                <label for="email" class="block text-sm font-medium text-zinc-400 mb-2">Email</label>
                <input 
                    id="email" 
                    class="w-full px-4 py-2 rounded-md bg-transparent border-2 border-zinc-600 text-white focus:ring-2 focus:ring-blue-500 focus:outline-none" 
                    type="email" 
                    placeholder="Enter your email" 
                    name="email" 
                    required>
            </div>

            <!-- Age Input -->
            <div>
                <label for="age" class="block text-sm font-medium text-zinc-400 mb-2">Age</label>
                <input 
                    id="age" 
                    class="w-full px-4 py-2 rounded-md bg-transparent border-2 border-zinc-600 text-white focus:ring-2 focus:ring-blue-500 focus:outline-none" 
                    type="number" 
                    placeholder="Enter your age" 
                    name="age" 
                    required>
            </div>

            <!-- Submit Button -->
            <div>
                <input 
                    type="submit" 
                    value="Create Account" 
                    class="w-full px-4 py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition duration-200">
            </div>
        </form>
    </div>
</body>
</html>
